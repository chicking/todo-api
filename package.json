{
  "name": "todo-api",
  "description": "A Todo api server",
  "version": "1.0.0",
  "author": "gongzza <gz.us.to@gmail.com>",
  "private": true,
  "scripts": {
    "start": "cross-env DEBUG=todo-api:* node ./bin/www",
    "test": "npm run test:base -- --tap | tap-nyan",
    "test:base": "cross-env NODE_ENV=test nyc ava --compilers js:babel-register -v",
    "report-coverage": "nyc report --reporter=lcov > coverage.lcov && codecov",
    "lint": "eslint .",
    "precommit": "npm run lint"
  },
  "dependencies": {
    "body-parser": "~1.17.1",
    "cookie-parser": "~1.4.3",
    "debug": "~2.6.3",
    "express": "~4.15.2",
    "morgan": "~1.8.1",
    "pug": "~2.0.0-beta11",
    "serve-favicon": "~2.4.2"
  },
  "devDependencies": {
    "ava": "^0.18.2",
    "codecov": "^2.1.0",
    "cross-env": "^4.0.0",
    "eslint": "^3.19.0",
    "eslint-config-standard": "^10.0.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-node": "^4.2.2",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^2.2.0",
    "husky": "^0.13.3",
    "nyc": "^10.2.0",
    "supertest": "^3.0.0",
    "tap-nyan": "^1.1.0"
  }
}
