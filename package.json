{
  "name": "todo-api",
  "description": "A Todo api server",
  "version": "2.0.0",
  "author": "gongzza <gz.us.to@gmail.com>",
  "private": true,
  "scripts": {
    "start": "babel-node bin/www",
    "dev": "cross-env DEBUG=todo-api:* nodemon bin/www --exec babel-node",
    "test": "npm run test:base -- --tap | tap-nyan",
    "test:base": "cross-env NODE_ENV=test nyc ava -v",
    "test:watch": "cross-env NODE_ENV=test ava --verbose --watch",
    "test:debug": "cross-env NODE_ENV=test DEBUG=todo-api:* ava",
    "report-coverage": "nyc report --reporter=lcov > coverage.lcov && codecov",
    "lint": "eslint ."
  },
  "dependencies": {
    "babel-cli": "^6.24.1",
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-preset-es2015-node": "^6.1.1",
    "bcrypt": "^1.0.2",
    "body-parser": "~1.17.2",
    "debug": "~2.6.8",
    "express": "~4.15.3",
    "jsonwebtoken": "^7.4.1",
    "konfig": "^0.2.1",
    "mongoose": "^4.11.3",
    "morgan": "~1.8.2",
    "validatorjs": "^3.13.4"
  },
  "devDependencies": {
    "ava": "^0.21.0",
    "codecov": "^2.2.0",
    "cross-env": "^5.0.1",
    "eslint": "^4.2.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^5.1.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "faker": "^4.1.0",
    "nodemon": "^1.11.0",
    "nyc": "^11.0.3",
    "supertest": "^3.0.0",
    "swagger-jsdoc": "^1.9.6",
    "swagger-ui-express": "2.0.1",
    "tap-nyan": "^1.1.0"
  },
  "ava": {
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  }
}
