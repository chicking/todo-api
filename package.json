{
  "name": "todo-api",
  "description": "A Todo api server",
  "version": "2.0.0",
  "author": "gongzza <gz.us.to@gmail.com>",
  "private": true,
  "scripts": {
    "start": "babel-node bin/www",
    "dev": "cross-env DEBUG=todo-api:* nodemon bin/www --exec babel-node",
    "test": "npm run test:base -- --tap | tap-nyan",
    "test:base": "cross-env NODE_ENV=test nyc ava -v",
    "test:watch": "cross-env NODE_ENV=test ava --verbose --watch",
    "report-coverage": "nyc report --reporter=lcov > coverage.lcov && codecov",
    "lint": "eslint .",
    "precommit": "npm run lint"
  },
  "dependencies": {
    "body-parser": "~1.17.1",
    "cookie-parser": "~1.4.3",
    "debug": "~2.6.3",
    "express": "~4.15.2",
    "jsonwebtoken": "^7.3.0",
    "konfig": "^0.2.1",
    "mongoose": "^4.9.4",
    "morgan": "~1.8.1"
  },
  "devDependencies": {
    "ava": "^0.18.2",
    "babel-cli": "^6.24.0",
    "codecov": "^2.1.0",
    "cross-env": "^4.0.0",
    "eslint": "^3.19.0",
    "eslint-config-standard": "^10.0.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-node": "^4.2.2",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "faker": "^4.1.0",
    "husky": "^0.13.3",
    "nodemon": "^1.11.0",
    "nyc": "^10.2.0",
    "supertest": "^3.0.0",
    "tap-nyan": "^1.1.0"
  },
  "ava": {
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  }
}
